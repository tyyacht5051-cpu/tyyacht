# 환경 설정 예시 파일
# 실제 사용시 .env 파일로 복사하여 실제 값으로 변경하세요

# 서버 환경 (개발서버용)
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# 데이터베이스 설정 (개발서버 환경)
DATABASE_PATH=./database.db

# JWT 보안 키 (반드시 변경 필요!)
JWT_SECRET=change-this-to-very-secure-jwt-secret-key-in-production

# 관리자 계정 기본 비밀번호 (반드시 변경 필요!)
ADMIN_PASSWORD=change-this-to-secure-admin-password

# CORS 허용 도메인 (쉼표로 구분) - 개발서버 및 운영서버 도메인
ALLOWED_ORIGINS=http://test-tyyacht.com,https://test-tyyacht.com,http://tyyacht-test.com,https://tyyacht-test.com,http://localhost:4000

# 업로드 설정 (개발서버용)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# 로깅 설정 (개발서버용)
LOG_LEVEL=debug
LOG_PATH=./logs

# 보안 설정
BCRYPT_ROUNDS=12

# Rate Limiting (DDoS 방지)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100